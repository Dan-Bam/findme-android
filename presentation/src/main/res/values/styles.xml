<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="registerBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:background">@drawable/selector_btn_register</item>
        <item name="android:paddingVertical">15dp</item>
    </style>

    <style name="blueBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:paddingVertical">15dp</item>
    </style>

    <style name="whiteBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:background">@drawable/bg_btn_white</item>
        <item name="android:paddingVertical">15dp</item>
    </style>

    <style name="editText">
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="hintTextColor">@color/gray2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="searchText">
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="hintTextColor">@color/gray2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text24700">
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="text18500">
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontWeight">500</item>
    </style>
    
    <style name="text16500">
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">500</item>
